<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-5">
      <div class="card p-4">
        <%= product_image(@product, 200, 150) %>
      </div>
    </div>

    <div class="col-6">
      <div class="card p-4">
        <h6><%= @product.title %></h6>
        <hr>
        <%= simple_format @product.description %>
        <hr>
        <small class="text-muted">Created <%= time_ago_in_words @product.created_at %> ago</small>
      </div>
    </div>

    <div class="col-1">
      <div class="form-group">
        <%= link_to 'Products', products_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'New', new_product_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'Edit', edit_product_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'Destroy', product_path, method: :delete, class: 'text-decoration-none text-dark' %>
      </div>
    </div>
  </div>
</div>
