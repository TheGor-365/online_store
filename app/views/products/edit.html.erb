<div class="container mt-5 mb-5">
  <h5>Edit product</h5>
  <div class="row">
    <div class="col-5">
      <div class="card p-4">
        <%= render 'products/form' %>
      </div>
    </div>
    <div class="col-6">
      <div class="card p-4">
        <%= product_image(@product, 300, 200) %>
      </div>
    </div>
    <div class="col-1">
      <div class="form-group">
        <%= link_to 'Products', products_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'New', new_product_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'Edit', edit_product_path, class: 'text-decoration-none text-dark' %>
      </div>
      <div class="form-group">
        <%= link_to 'Destroy', product_path, method: :delete, class: 'text-decoration-none text-dark' %>
      </div>
    </div>
  </div>
</div>
