<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-12">
      <div class="card p-4">
        <table class="table table-bordered table-dark">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Title</th>
              <th scope="col">Price</th>
              <th scope="col">Is b/o</th>
              <th scope="col">Image</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <th scope="row"><%= product.id %></th>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.is_best_offer %></td>
                <td><%= product_image(product, 60, 45) %></td>
                <td><%= link_to 'New', new_product_path(product), class: 'text-decoration-none text-light' %> | <%= link_to 'Edit', edit_product_path(product), class: 'text-decoration-none text-light' %> | <%= link_to 'Destroy', product_path(product), method: :delete, class: 'text-decoration-none text-light' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
