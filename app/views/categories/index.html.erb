<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-8">
      <h5>Categories</h5>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Heading</th>
            <th>Body</th>
            <th>Display</th>
            <th colspan="3">Controlls</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><small><%= category.heading %></small></td>
              <td><small><%= category.body %></small></td>
              <td><small><%= category.display %></small></td>
              <td><%= link_to 'Show', category, class: 'text-decoration-none text-dark' %></td>
              <td><%= link_to 'Edit', edit_category_path(category), class: 'text-decoration-none text-dark' %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none text-dark' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Category', new_category_path, class: 'text-decoration-none text-dark' %>
    </div>
  </div>
</div>
