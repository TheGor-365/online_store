<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to 'Online Store', root_path, class: 'text-dark text-decoration-none' %></h5>

  <% if account_signed_in? %>

    <nav class="my-2 my-md-0 mr-md-3">
      <%= link_to 'Home', root_path, class: "text-dark mr-3 text-decoration-none" %>
      <%= link_to 'Settings', edit_account_registration_path, class: "text-dark mr-3 text-decoration-none" %>
      <%= link_to 'Products List', products_path, class: "mr-3 text-decoration-none" %>
      <%= link_to 'Categories List', categories_path, class: "mr-3 text-decoration-none" %>
    </nav>

    <%= link_to profile_path(current_account) do %>
      <span class="badge badge-secondary float-right mr-1">
        <%= current_account.full_name %>
      </span>
    <% end %>

    <span class="float-right mr-3 ml-3"><%= link_to profile_picture(current_account, 40), edit_account_registration_path(current_account) %></span>

    <%= link_to 'Sign out', destroy_account_session_path, method: :delete, class: "btn btn-outline-danger" %>
  <% else %>
    <%= link_to 'Sign in', new_account_session_path, class: "btn btn-success mr-3" %>
    <%= link_to 'Sign up', new_account_registration_path, class: "btn btn-secondary" %>
  <% end %>
</div>
